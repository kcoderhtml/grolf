generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./data/users.db"
}

model Analytics {
    id            String   @id @default(uuid())
    day           DateTime @unique @default(now())
    totalCommits  Int      @default(0)
    totalReleases Int      @default(0)
    newUsers      Int      @default(0)
}

model Settings {
    id      String  @id @default(uuid())
    setting String  @unique
    boolean Boolean
}

model Users {
    id                String  @id @default(uuid())
    userID            String
    userName          String
    viewID            String
    githubUser        String
    installed         Boolean
    threadTS          String
    expireTime        String
    arcadeSessionDone Boolean
}

